<% content_for :title, "#{@course.display_name} - Manage Invitations" %>

<div class="px-4 py-6 sm:px-0">
  <!-- Breadcrumb Navigation -->
  <nav class="flex mb-8" aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-4">
      <li>
        <div class="flex">
          <%= link_to "Courses", courses_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
          <%= link_to @course.display_name, course_path(@course), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
          <span class="ml-4 text-sm font-medium text-gray-500">Manage Invitations</span>
        </div>
      </li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Manage Course Invitations
      </h2>
      <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-6">
        <div class="mt-2 flex items-center text-sm text-gray-500">
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
          </svg>
          <%= @course.display_name %>
        </div>
      </div>
    </div>
    <% if @course.can_assign_students_directly?(current_user) %>
      <div class="mt-4 flex md:ml-4 md:mt-0">
        <%= link_to assign_students_course_path(@course), 
            class: "inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          Assign Students Directly
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Direct Assignment Info Banner -->
  <% if @course.can_assign_students_directly?(current_user) %>
    <div class="rounded-md bg-blue-50 p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1 md:flex md:justify-between">
          <p class="text-sm text-blue-700">
            <strong>Direct Assignment Available:</strong> You can assign students from your organization directly to this course without requiring invitation codes. 
            This feature is enabled for your organization.
          </p>
          <p class="mt-3 text-sm md:ml-6 md:mt-0">
            <%= link_to assign_students_course_path(@course), 
                class: "whitespace-nowrap font-medium text-blue-700 hover:text-blue-600" do %>
              Assign students <span aria-hidden="true">&rarr;</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Create New Invitation Form -->
  <div class="bg-white shadow sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Create New Invitation</h3>
      
      <%= form_with model: [@course, @new_invitation], url: create_invitation_course_path(@course), method: :post, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, placeholder: "e.g., Fall 2024 Enrollment", 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :expires_at, "Expires At", class: "block text-sm font-medium text-gray-700" %>
            <%= f.datetime_local_field :expires_at, value: 1.month.from_now.strftime("%Y-%m-%dT%H:%M"),
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :max_uses, "Max Uses (optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :max_uses, placeholder: "Unlimited if blank",
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>
        
        <div class="flex justify-end">
          <%= f.submit "Create Invitation", 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Existing Invitations -->
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Course Invitations</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Manage invitation codes for students to join your course.
      </p>
    </div>
    
    <% if @invitations.any? %>
      <ul role="list" class="divide-y divide-gray-200">
        <% @invitations.each do |invitation| %>
          <li class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= invitation.display_name %>
                  </p>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= invitation.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= invitation.active? ? 'Active' : 'Inactive' %>
                  </span>
                </div>
                
                <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                  <div class="flex items-center">
                    <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                    Code: <span class="font-mono font-medium"><%= invitation.token %></span>
                  </div>
                  
                  <div class="flex items-center">
                    <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    <% if invitation.expires_at %>
                      Expires: <%= invitation.expires_at.strftime("%B %d, %Y at %I:%M %p") %>
                    <% else %>
                      Never expires
                    <% end %>
                  </div>
                  
                  <div class="flex items-center">
                    <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                    </svg>
                    Uses: <%= invitation.current_uses %>
                    <% if invitation.max_uses %>
                      / <%= invitation.max_uses %>
                    <% else %>
                      (unlimited)
                    <% end %>
                  </div>
                </div>

                <!-- Invitation URL -->
                <div class="mt-3 p-3 bg-gray-50 rounded-md">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <label class="block text-xs font-medium text-gray-700 mb-1">Invitation URL:</label>
                      <input type="text" readonly 
                             value="<%= course_invitation_url(invitation.token) %>"
                             class="block w-full text-sm text-gray-600 bg-transparent border-none p-0 focus:ring-0"
                             id="invitation-url-<%= invitation.id %>">
                    </div>
                    <button type="button" 
                            onclick="copyToClipboard('invitation-url-<%= invitation.id %>')"
                            class="ml-3 flex-shrink-0 text-blue-600 hover:text-blue-500 text-sm font-medium">
                      Copy
                    </button>
                  </div>
                </div>
              </div>
              
              <div class="flex space-x-2 ml-4">
                <% if invitation.active? %>
                  <button type="button" class="text-red-600 hover:text-red-900 text-sm font-medium">
                    Deactivate
                  </button>
                <% else %>
                  <button type="button" class="text-green-600 hover:text-green-900 text-sm font-medium">
                    Activate
                  </button>
                <% end %>
                
                <%= link_to course_invitation_path(invitation.token), 
                    class: "text-blue-600 hover:text-blue-900 text-sm font-medium" do %>
                  View QR Code
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No invitations yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating your first invitation code above.</p>
      </div>
    <% end %>
  </div>
</div>

<script>
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  element.select();
  element.setSelectionRange(0, 99999); // For mobile devices
  
  try {
    document.execCommand('copy');
    // Could add a toast notification here
    console.log('Copied to clipboard');
  } catch (err) {
    console.error('Failed to copy: ', err);
  }
}
</script>