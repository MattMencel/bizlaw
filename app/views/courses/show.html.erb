<% content_for :title, @course.display_name %>

<div class="px-4 py-6 sm:px-0">
  <!-- Breadcrumb Navigation -->
  <nav class="flex mb-8" aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-4">
      <li>
        <div class="flex">
          <%= link_to "Courses", courses_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
          <span class="ml-4 text-sm font-medium text-gray-500"><%= @course.display_name %></span>
        </div>
      </li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @course.title %>
      </h2>
      <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-6">
        <div class="mt-2 flex items-center text-sm text-gray-500">
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
          </svg>
          <%= @course.course_code %>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-500">
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          <%= @course.semester_display %> <%= @course.academic_year %>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-500">
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zM5.5 9.643a.75.75 0 00-1.5 0V10c0 3.06 2.29 5.585 5.25 5.954V17.5h-1.5a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5H10.5v-1.546A6.001 6.001 0 0016 10v-.357a.75.75 0 00-1.5 0V10a4.5 4.5 0 01-9 0v-.357z" />
          </svg>
          <%= @course.instructor.full_name %>
        </div>
        <div class="mt-2 flex items-center">
          <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= @course.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @course.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>
      </div>
    </div>

    <% if @course.can_be_managed_by?(current_user) %>
      <div class="mt-4 flex space-x-3 md:ml-4 md:mt-0">
        <%= link_to edit_course_path(@course),
            class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M2.695 14.763l-1.262 3.154a.5.5 0 00.65.65l3.155-1.262a4 4 0 001.343-.885L17.5 5.5a2.121 2.121 0 00-3-3L3.58 13.42a4 4 0 00-.885 1.343z" />
          </svg>
          Edit Course
        <% end %>

        <%= link_to manage_invitations_course_path(@course),
            class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z" />
            <path d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z" />
          </svg>
          Manage Invitations
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Course Description -->
  <% if @course.description.present? %>
    <div class="mt-6">
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-2">Course Description</h3>
          <p class="text-sm text-gray-700"><%= @course.description %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Stats Grid -->
  <div class="mt-8">
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Total Students -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m3 5.197H9m12 0a9 9 0 11-18 0 2 2 0 013.75-1.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Students</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @students.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Active Teams -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Active Teams</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @teams.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Course Dates -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Course Period</dt>
                <dd class="text-sm font-medium text-gray-900">
                  <% if @course.start_date && @course.end_date %>
                    <%= @course.start_date.strftime("%b %d") %> - <%= @course.end_date.strftime("%b %d, %Y") %>
                  <% else %>
                    <%= @course.semester_display %> <%= @course.academic_year %>
                  <% end %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Invitation Status -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-indigo-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Invitation</dt>
                <dd class="text-sm font-medium text-gray-900">
                  <% if @course_invitation %>
                    <span class="text-green-600">Active</span>
                  <% else %>
                    <span class="text-gray-400">None</span>
                  <% end %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Students Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Enrolled Students</h3>
        <% if @students.any? %>
          <div class="space-y-3">
            <% @students.limit(10).each do |student| %>
              <div class="flex items-center justify-between py-2">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-700">
                      <%= student.full_name.split.map(&:first).join.upcase %>
                    </span>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= student.full_name %></p>
                    <p class="text-xs text-gray-500"><%= student.email %></p>
                  </div>
                </div>
                <div class="text-xs text-gray-400">
                  Enrolled <%= time_ago_in_words(student.course_enrollments.find_by(course: @course)&.enrolled_at || @course.created_at) %> ago
                </div>
              </div>
            <% end %>
            <% if @students.count > 10 %>
              <div class="text-center pt-3 border-t border-gray-200">
                <p class="text-sm text-gray-500">And <%= @students.count - 10 %> more students...</p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m3 5.197H9m12 0a9 9 0 11-18 0 2 2 0 013.75-1.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No students enrolled yet</h3>
            <p class="mt-1 text-sm text-gray-500">Students will appear here once they join your course.</p>
            <% if @course.can_be_managed_by?(current_user) %>
              <div class="mt-6">
                <%= link_to manage_invitations_course_path(@course),
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
                  <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  Create Invitation
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Cases Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Course Cases</h3>
          <% if @course.can_be_managed_by?(current_user) %>
            <%= link_to new_course_case_path(@course),
                class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="-ml-0.5 mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              New Case
            <% end %>
          <% end %>
        </div>

        <% if @cases.any? %>
          <div class="space-y-3">
            <% @cases.each do |case_item| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="text-sm font-medium text-gray-900">
                      <%= link_to case_item.title, course_case_path(@course, case_item), class: "hover:text-blue-600" %>
                    </h4>
                    <% if case_item.description.present? %>
                      <p class="text-xs text-gray-500 mt-1"><%= truncate(case_item.description, length: 100) %></p>
                    <% end %>
                    <div class="flex items-center space-x-4 mt-2">
                      <p class="text-xs text-gray-400">
                        <%= pluralize(case_item.simulations.count, 'simulation') %>
                      </p>
                    </div>

                    <!-- Active Simulations -->
                    <% if case_item.simulations.any? %>
                      <div class="mt-3 pl-4 border-l-2 border-gray-100">
                        <div class="text-xs font-medium text-gray-700 mb-2">Active Simulations</div>
                        <% case_item.simulations.limit(2).each do |simulation| %>
                          <div class="mb-2 last:mb-0">
                            <div class="flex items-center justify-between">
                              <div class="text-xs text-gray-600">
                                <%= simulation.display_name %>
                                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= simulation.status == 'active' ? 'bg-green-100 text-green-700' : simulation.status == 'completed' ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-700' %>">
                                  <%= simulation.status.humanize %>
                                </span>
                              </div>
                            </div>
                            <% if simulation.teams.any? %>
                              <div class="mt-1 flex flex-wrap gap-1">
                                <% simulation.plaintiff_teams.limit(1).each do |team| %>
                                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-blue-50 text-blue-700">
                                    <%= team.name %> (Plaintiff)
                                  </span>
                                <% end %>
                                <% simulation.defendant_teams.limit(1).each do |team| %>
                                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-red-50 text-red-700">
                                    <%= team.name %> (Defendant)
                                  </span>
                                <% end %>
                              </div>
                            <% end %>
                          </div>
                        <% end %>
                        <% if case_item.simulations.count > 2 %>
                          <div class="text-xs text-gray-400">
                            + <%= case_item.simulations.count - 2 %> more simulations
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to course_case_path(@course, case_item),
                        class: "text-blue-600 hover:text-blue-900 text-xs font-medium" do %>
                      View
                    <% end %>
                    <% if case_item.editable? && @course.can_be_managed_by?(current_user) %>
                      <%= link_to edit_course_case_path(@course, case_item),
                          class: "text-gray-600 hover:text-gray-900 text-xs font-medium" do %>
                        Edit
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
            <% if @course.cases.count > 5 %>
              <div class="text-center pt-3 border-t border-gray-200">
                <%= link_to course_cases_path(@course), class: "text-sm text-blue-600 hover:text-blue-900 font-medium" do %>
                  View all <%= @course.cases.count %> cases →
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No cases created yet</h3>
            <p class="mt-1 text-sm text-gray-500">Cases are legal simulations for students to practice on.</p>
            <% if @course.can_be_managed_by?(current_user) %>
              <div class="mt-6">
                <%= link_to new_course_case_path(@course),
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" do %>
                  <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  Create First Case
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Teams Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Course Teams</h3>
          <% if @course.can_be_managed_by?(current_user) %>
            <%= link_to new_course_team_path(@course),
                class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="-ml-0.5 mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              New Team
            <% end %>
          <% end %>
        </div>

        <% if @teams.any? %>
          <div class="space-y-3">
            <% @teams.each do |team| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="text-sm font-medium text-gray-900">
                      <%= link_to team.name, team_path(team), class: "hover:text-blue-600" %>
                    </h4>
                    <% if team.description.present? %>
                      <p class="text-xs text-gray-500 mt-1"><%= truncate(team.description, length: 100) %></p>
                    <% end %>
                    <p class="text-xs text-gray-400 mt-1">
                      <%= pluralize(team.team_members.count, 'member') %>
                      <% if team.owner %>
                        • Owner: <%= team.owner.full_name %>
                      <% end %>
                    </p>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to team_path(team),
                        class: "text-blue-600 hover:text-blue-900 text-xs font-medium" do %>
                      View
                    <% end %>
                    <% if policy(team).update? %>
                      <%= link_to edit_course_team_path(@course, team),
                          class: "text-gray-600 hover:text-gray-900 text-xs font-medium" do %>
                        Edit
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No teams created yet</h3>
            <p class="mt-1 text-sm text-gray-500">Teams help organize students for collaborative work.</p>
            <% if @course.can_be_managed_by?(current_user) %>
              <div class="mt-6">
                <%= link_to new_course_team_path(@course),
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
                  <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  Create First Team
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <% if @recent_enrollments.any? %>
    <div class="mt-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Activity</h3>
          <div class="flow-root">
            <ul role="list" class="-mb-8">
              <% @recent_enrollments.each_with_index do |enrollment, index| %>
                <li>
                  <div class="relative pb-8">
                    <% unless index == @recent_enrollments.count - 1 %>
                      <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                    <% end %>
                    <div class="relative flex space-x-3">
                      <div>
                        <span class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center ring-8 ring-white">
                          <svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path d="M10 8a3 3 0 100-6 3 3 0 000 6zM3.465 14.493a1.23 1.23 0 00.41 1.412A9.957 9.957 0 0010 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 00-13.074.003z" />
                          </svg>
                        </span>
                      </div>
                      <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                        <div>
                          <p class="text-sm text-gray-500">
                            <strong class="font-medium text-gray-900"><%= enrollment.user.full_name %></strong> enrolled in the course
                          </p>
                        </div>
                        <div class="whitespace-nowrap text-right text-sm text-gray-500">
                          <time datetime="<%= enrollment.enrolled_at&.iso8601 %>">
                            <%= time_ago_in_words(enrollment.enrolled_at || enrollment.created_at) %> ago
                          </time>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
