<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">Teams</h1>
      <p class="text-sm text-gray-600">Teams are created within courses. Visit a course to create a new team.</p>
    </div>

    <div class="mt-8">
      <div class="bg-white shadow rounded-lg p-4">
        <div class="border-b border-gray-200 pb-4 mb-4">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Active Teams</h3>
        </div>
        <div id="teams-list">
          <%= render "list", teams: @teams %>
        </div>
      </div>
    </div>
  </div>
</div>
