<% content_for :title, "System Settings" %>

<div class="space-y-6">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">System Settings</h1>
      <p class="text-gray-600 mb-8">
        Configure system-wide settings for the Business Law Education Platform.
      </p>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @settings_categories.each do |key, name| %>
          <div class="relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-blue-500 border border-gray-200 rounded-lg hover:border-gray-300 transition-colors">
            <%= link_to admin_setting_path(key), class: "absolute inset-0" %>
            
            <div>
              <span class="rounded-lg inline-flex p-3 <%= setting_icon_bg_class(key) %>">
                <%= setting_icon(key) %>
              </span>
            </div>
            
            <div class="mt-8">
              <h3 class="text-lg font-medium text-gray-900">
                <span class="absolute inset-0" aria-hidden="true"></span>
                <%= name %>
              </h3>
              <p class="mt-2 text-sm text-gray-500">
                <%= setting_description(key) %>
              </p>
            </div>
            
            <span class="pointer-events-none absolute top-6 right-6 text-gray-300 group-hover:text-gray-400" aria-hidden="true">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4h1a1 1 0 00-1-1v1zm-1 12a1 1 0 102 0h-2zM8 3a1 1 0 000 2V3zM3.293 19.293a1 1 0 101.414 1.414l-1.414-1.414zM19 4v12h2V4h-2zm1-1H8v2h12V3zm-.707.293l-16 16 1.414 1.414 16-16-1.414-1.414z"/>
              </svg>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Recent Settings Changes</h2>
      <div class="text-sm text-gray-500">
        <p>No recent settings changes.</p>
        <p class="mt-2">Settings modifications will appear here for audit purposes.</p>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .setting-card:hover .setting-icon {
      transform: scale(1.05);
    }
  </style>
<% end %>