<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
  <div class="sm:col-span-2">
    <%= form.label :application_name, "Application Name", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field "settings[application_name]", 
        value: settings[:application_name],
        class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    <p class="mt-2 text-sm text-gray-500">The name displayed throughout the application.</p>
  </div>

  <div>
    <%= form.label :contact_email, "Contact Email", class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field "settings[contact_email]", 
        value: settings[:contact_email],
        class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    <p class="mt-2 text-sm text-gray-500">Primary contact email for support inquiries.</p>
  </div>

  <div>
    <%= form.label :support_url, "Support URL", class: "block text-sm font-medium text-gray-700" %>
    <%= form.url_field "settings[support_url]", 
        value: settings[:support_url],
        class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
        placeholder: "https://support.example.com" %>
    <p class="mt-2 text-sm text-gray-500">URL for support documentation or help desk.</p>
  </div>

  <div class="sm:col-span-2 space-y-4">
    <div class="flex items-center">
      <%= form.check_box "settings[maintenance_mode]", 
          { checked: settings[:maintenance_mode], class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" }, 
          "true", "false" %>
      <%= form.label :maintenance_mode, "Maintenance Mode", class: "ml-2 block text-sm text-gray-900" %>
    </div>
    <p class="text-sm text-gray-500">When enabled, the application will show a maintenance message to users.</p>

    <div class="flex items-center">
      <%= form.check_box "settings[registration_enabled]", 
          { checked: settings[:registration_enabled], class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" }, 
          "true", "false" %>
      <%= form.label :registration_enabled, "User Registration Enabled", class: "ml-2 block text-sm text-gray-900" %>
    </div>
    <p class="text-sm text-gray-500">Allow new users to register for accounts.</p>
  </div>
</div>