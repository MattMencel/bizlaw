<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Enter Course Invitation Code
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Enter the invitation code provided by your instructor
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with url: process_code_course_invitations_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :token, "Invitation Code", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :token,
                placeholder: "Enter your invitation code",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                required: true,
                autofocus: true %>
          </div>
        </div>

        <div>
          <%= form.submit "Join Course",
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Need help?</span>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Contact your instructor if you don't have an invitation code or if you're having trouble joining.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
