<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <header>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold leading-tight text-gray-900">Simulation Dashboard</h1>
        <p class="mt-2 text-gray-600">Welcome back, <%= current_user.full_name %>!</p>
      </div>
    </header>

    <main>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <!-- Quick Actions -->
        <div class="mb-8">
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
                <% if @active_simulations.any? %>
                  <%= link_to case_negotiations_path(@active_simulations.first.case), class: "bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" do %>
                    Continue Simulation
                  <% end %>
                <% end %>

                <%= link_to cases_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" do %>
                  View Case Materials
                <% end %>

                <%= link_to teams_path, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" do %>
                  My Teams
                <% end %>

                <%= link_to "/course_invitations/enter_code", class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" do %>
                  Join Simulation
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Simulation Stats Overview -->
        <div class="mb-8">
          <div class="grid grid-cols-1 gap-5 sm:grid-cols-4">
            <!-- Active Simulations -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-orange-500 rounded-md flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="text-sm font-medium text-gray-500 truncate">Active Simulations</dt>
                      <dd class="text-lg font-medium text-gray-900"><%= @simulation_stats[:active] %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>

            <!-- Completed Simulations -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="text-sm font-medium text-gray-500 truncate">Completed Simulations</dt>
                      <dd class="text-lg font-medium text-gray-900"><%= @simulation_stats[:completed] %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>

            <!-- Settlement Success Rate -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="text-sm font-medium text-gray-500 truncate">Settlement Success Rate</dt>
                      <dd class="text-lg font-medium text-gray-900"><%= @simulation_stats[:settlement_rate] %>%</dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>

            <!-- My Teams -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="text-sm font-medium text-gray-500 truncate">My Teams</dt>
                      <dd class="text-lg font-medium text-gray-900"><%= @my_teams&.count || 0 %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- My Active Simulations -->
        <div class="mb-8">
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">My Active Simulations</h3>
              <% if @active_simulations.any? %>
                <div class="space-y-4">
                  <% @active_simulations.each do |simulation| %>
                    <% case_item = simulation.case %>
                    <div class="border border-gray-200 rounded-lg p-4 bg-gradient-to-r from-orange-50 to-red-50">
                      <div class="flex items-center justify-between">
                        <div class="flex-1">
                          <h4 class="text-md font-medium text-gray-900"><%= case_item.title %></h4>
                          <p class="text-sm text-gray-600 mt-1">Case: <%= case_item.reference_number %></p>
                          <div class="flex items-center mt-2 space-x-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                              <%= simulation.status.humanize %>
                            </span>
                            <span class="text-xs text-gray-500">
                              Round <%= simulation.current_round || 1 %> of <%= simulation.total_rounds || 6 %>
                            </span>
                          </div>
                        </div>
                        <div class="flex space-x-2 ml-4">
                          <%= link_to case_negotiations_path(case_item), class: "bg-orange-600 hover:bg-orange-700 text-white text-xs font-medium py-2 px-3 rounded-md transition duration-200" do %>
                            Continue Negotiation
                          <% end %>
                          <%= link_to course_case_path(case_item.course, case_item), class: "text-blue-600 hover:text-blue-900 text-xs font-medium py-2 px-3 border border-blue-300 rounded-md transition duration-200" do %>
                            View Details
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900">No active simulations</h3>
                  <p class="mt-1 text-sm text-gray-500">Get started by joining a simulation or waiting for assignment</p>
                  <div class="mt-6">
                    <%= link_to "/course_invitations/enter_code", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" do %>
                      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                      </svg>
                      Browse Available Simulations
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="mb-8">
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Activity</h3>
              <% if @recent_activity.present? %>
                <div class="flow-root">
                  <ul class="-mb-8">
                    <% @recent_activity.each_with_index do |activity, index| %>
                      <li>
                        <div class="relative pb-8">
                          <% unless index == @recent_activity.length - 1 %>
                            <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                          <% end %>
                          <div class="relative flex space-x-3">
                            <div>
                              <span class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center ring-8 ring-white">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                              </span>
                            </div>
                            <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                              <div>
                                <p class="text-sm text-gray-500">
                                  <%= activity[:description] %>
                                </p>
                              </div>
                              <div class="text-right text-sm whitespace-nowrap text-gray-500">
                                <%= activity[:time_ago] %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900">No recent activity</h3>
                  <p class="mt-1 text-sm text-gray-500">Your simulation activity will appear here as you participate.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- All My Simulations -->
        <div class="mb-8">
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">All My Simulations</h3>
              <% if @my_cases.any? %>
                <div class="space-y-4">
                  <% @my_cases.each do |case_item| %>
                    <% active_simulation = case_item.active_simulation %>
                    <% if active_simulation %>
                      <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                          <div>
                            <h4 class="text-md font-medium text-gray-900"><%= case_item.title %></h4>
                            <p class="text-sm text-gray-500"><%= case_item.case_type&.humanize %> Simulation</p>
                            <div class="flex items-center mt-2 space-x-3">
                              <% status_color = active_simulation.status == 'active' ? 'green' : active_simulation.status == 'completed' ? 'blue' : 'gray' %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= status_color %>-100 text-<%= status_color %>-800">
                                <%= active_simulation.status.humanize %>
                              </span>
                              <% case_team = case_item.case_teams.joins(:team).where(teams: { id: current_user.team_ids }).first %>
                              <% if case_team %>
                                <span class="text-xs text-gray-500">
                                  Playing as <%= case_team.role.humanize %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                          <div class="flex space-x-2">
                            <% if ['active', 'paused'].include?(active_simulation.status) %>
                              <%= link_to case_negotiations_path(case_item), class: "bg-orange-600 hover:bg-orange-700 text-white text-xs font-medium py-2 px-3 rounded-md transition duration-200" do %>
                                Continue
                              <% end %>
                            <% end %>
                            <%= link_to course_case_path(case_item.course, case_item), class: "text-blue-600 hover:text-blue-900 text-xs font-medium py-2 px-3 border border-blue-300 rounded-md transition duration-200" do %>
                              View Details
                            <% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900">No simulations yet</h3>
                  <p class="mt-1 text-sm text-gray-500">Join a team to start participating in legal simulations.</p>
                  <div class="mt-6">
                    <%= link_to "/course_invitations/enter_code", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
                      Join Course
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
